                      <a class="nav-link" href="/crop_activity">Field Crop Activities</a>
                  </li>
              </ul>
          </div>
      </div>
  </nav>

  <h3 class="sub-header">Edit Field</h3>
  <br/>
  <br/>
 
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-4">
      </div>
      <div class="col-md-4" id="add_box" align="center">
        <div class="card" style="background-color: rgb(247, 247, 247);">
          <br/>
          <br/>
          <br/>
          <form name="edit" class=" " action="/field/edit" method="post" onsubmit="need()">
            <input type="hidden" name="field_id" value="<%= field_id%>">
            <div class="add_input_1">
              <label for="size">Size (in mÂ²)</label>
              <input type="text" name="size" minlength="1" maxlength="255"/>
            </div>
            <br/>
            <hr/>
            <br/>
            <div class="add_input_2">
              <label for="soil_type">Soil type</label>
              <select id="soil_type" name="soil_type" onchange="best_crop_function()">
                <option value="" id ="Blank" name="Blank"></option>
                <option value="Chalky" name="soil_type">Chalky</option>
                <option value="Clay" name="soil_type">Clay</option>
                <option value="Loamy" name="soil_type">Loamy</option>
                <option value="Peaty" name="soil_type">Peaty</option>
                <option value="Sandy" name="soil_type">Sandy</option>
                <option value="Silty" name="soil_type">Silty</option>
              </select>
            </div>
            <br/>
            <hr/>
            <br/>
            <div class="add_input_3">
              <label for="best_crop">Best crops - </label>
              <input id="best_crop" type="hidden" type="text" name="best_crop"/>
              <label  id="best_crop2" ></label>
            </div>
            <br/>
            <hr/>
            <br/>
            <button type="submit" class="btn btn-outline-secondary">Submit</button>
            <br/>
            <br/>
            <br/>
            <br/>
          </form>
        </div>
      </div>
      <div class="col-md-4">
      </div>
    </div>
    <br/>
    <br/>
  </div>  

      <script type="text/javascript">

      function best_crop_function(){
            var s = document.getElementById("soil_type").value;

            if(s =="Sandy"){
                    document.getElementById("best_crop").value=" Beans, carrots, corn, cucumbers, lettuce, potatoes, tomatoes, melons";
                    document.getElementById('best_crop2').innerHTML=" Beans, carrots, corn, cucumbers, lettuce, potatoes, tomatoes, melons";
            }
            else if (s == "Silty") {
                    document.getElementById("best_crop").value="Beetroots, cabbages, corn, spinach";
                    document.getElementById('best_crop2').innerHTML="Beetroots, cabbages, corn, spinach";
            }
            else if (s == "Peaty") {
                    document.getElementById("best_crop").value="Beans, beetroots, cabbages, carrots, lentils, parsnips, peas, potatoes, spinach, turnips";
                    document.getElementById('best_crop2').innerHTML="Beans, beetroots, cabbages, carrots, lentils, parsnips, peas, potatoes, spinach, turnips";
            }
            else if (s == "Loamy") {
                    document.getElementById("best_crop").value="Beans, cucumbers, lettuce, onions, peppers, strawberries, sugarcane, tomatoes, wheat";
                    document.getElementById('best_crop2').innerHTML="Beans, cucumbers, lettuce, onions, peppers, strawberries, sugarcane, tomatoes, wheat";
            }
            else if (s =="Clay") {
                    document.getElementById("best_crop").value="Beans, beetroots, broccoli, cabbages, carrots, corn, lettuce, pumpkins, rice, squashes";
                    document.getElementById('best_crop2').innerHTML="Beans, beetroots, broccoli, cabbages, carrots, corn, lettuce, pumpkins, rice, squashes";
            }
            else if (s=="Chalky") {
                    document.getElementById("best_crop").value="Beetroots, cabbages, corn, spinach";
                    document.getElementById('best_crop2').innerHTML="Beetroots, cabbages, corn, spinach";
            }
            else {
              document.getElementById("best_crop").value="No Soil type selected";
              document.getElementById("best_crop2").innerHTML="No Soil type selected";
            }
        }

      </script>
    </form>

  </body>
</html>
